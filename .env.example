# ============================================
# CONFIGURACIÓN DE PREGÓN - UNViMe Calendar Bot
# ============================================

# ============================================
# CONFIGURACIÓN GENERAL
# ============================================
APP_NAME=Pregon
VERSION=1.0.0
ENVIRONMENT=production

# URL del calendario académico
CALENDAR_URL=https://www.unvime.edu.ar/calendario/

# ============================================
# RAILWAY / DEPLOYMENT
# ============================================
# Railway asigna PORT automáticamente para servicios web
PORT=5000

# ============================================
# DISCORD
# ============================================
# Webhook para notificaciones automáticas
# Obtén tu webhook en: Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Bot conversacional
# Crea un bot en: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN
DISCORD_GUILD_ID=YOUR_GUILD_ID

# ============================================
# WHATSAPP (TWILIO)
# ============================================
# Obtén credenciales en: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here

# Sandbox (gratis): whatsapp:+14155238886
# Número propio (pago): whatsapp:+15551234567
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Tu número de WhatsApp (con código de país)
TWILIO_WHATSAPP_TO=whatsapp:+5492657XXXXXX

# ============================================
# IA / GEMINI
# ============================================
# Obtén tu API key en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Configuración de Gemini
# Modelos disponibles: gemini-2.0-flash-exp, gemini-1.5-pro
LLM_MODEL_GEMINI=gemini-2.5-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ============================================
# GOOGLE CALENDAR
# ============================================
# Archivos de credenciales (no incluir en git)
GOOGLE_CREDENTIALS_PATH=credentials/google_calendar.json
GOOGLE_TOKEN_PATH=credentials/token.json

# ============================================
# LOGGING
# ============================================
# Niveles: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO
LOG_TO_FILE=true

# ============================================
# CACHE
# ============================================
ENABLE_CACHE=true
# TTL en segundos (21600 = 6 horas)
CACHE_TTL=21600